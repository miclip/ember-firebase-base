{{#if modelSuccess}}
	<br/>
	<div class="alert alert-success alert-dismissable" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>  </button>
		  <i class="fa fa-check"></i>
		<strong>Success!</strong> Account deleted.
		<i class="fa fa-ok"></i>
	</div>
{{/if}}	
<br/>
	<div class="alert alert-warning" role="alert">
		  <i class="fa fa-fa-exclamation-triangle"></i>
		<strong>Warning!</strong> Account deletion cannot be undone.
		<i class="fa fa-ok"></i>
	</div>
<form {{action 'removeUser' model on="submit" }}>
	<h2>Delete Account</h2>
	{{#if model.errors}}
		{{display-errors errors=model.errors}}
	{{/if}}
	{{validated-input-group type="email" placeholder="Enter email" name="email" hasValidationErrors=hasValidationErrors required=true labelText="Email Address" value=model.email errors=errors.validationModel.email}}
	{{validated-input-group type="password" placeholder="Enter password" name="password" hasValidationErrors=hasValidationErrors required=true labelText="Confirm Deletion" value=model.password errors=errors.validationModel.password}}	
	<button class="btn btn-warning" type='submit'>Remove User</button>
</form>


