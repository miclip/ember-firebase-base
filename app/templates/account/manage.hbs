{{#if modelSuccess}}
	<br/>
	<div class="alert alert-success alert-dismissable" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>  </button>
		  <i class="fa fa-check"></i>
		<strong>Success!</strong> Account changed.
		<i class="fa fa-ok"></i>
	</div>
{{/if}}	

<form {{action 'updateUser' model on="submit" }}>
	<h2>Manage Account</h2>

	{{#if model.errors}}
		{{display-errors errors=model.errors}}
	{{/if}}
	{{validated-input-group type="email" placeholder="Enter email" name="email" required=true labelText="Email Address" value=model.email errors=errors.email}}
	{{validated-input-group type="text" placeholder="Enter name" name="name" labelText="Name" value=model.name errors=errors.name}}
	{{validated-input-group type="password" placeholder="Enter password" name="password" required=true labelText="Confirm Change" value=model.password errors=errors.password}}
	
	<button class="btn btn-primary" type='submit'>Update</button>
</form>


