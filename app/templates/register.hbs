
{{#unless  session.currentUser}}
<form {{action 'registerUser' model on="submit" }}>
	 <h2>Register</h2>
	<div class="form-group">
		<label for="email">Email address</label>
		{{validated-input type="email" placeholder="Enter email" value=model.email errors=errors.email}}
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		{{validated-input type="password" placeholder="Enter password" value=model.password errors=errors.password}}
	</div>
	<div class="form-group">
		<label for="passwordConfirmation">Confirm Password</label>
		{{validated-input type="password" placeholder="Confirm password" value=model.passwordConfirmation errors=errors.passwordConfirmation}}
	</div>	
	<button class="btn btn-primary" type='submit'>Register</button>
</form>
{{/unless}}