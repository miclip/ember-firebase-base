
{{#unless  session.currentUser}}
	<form {{action 'registerUser' model on="submit" }}>
		<h2>Register</h2>
		{{#if model.errors}}
			{{display-errors errors=model.errors}}
		{{/if}}
		{{validated-input-group type="email" placeholder="Enter email" name="email" labelText="Email Address" value=model.email errors=errors.email}}
		{{validated-input-group type="password" placeholder="Enter password" name="password" labelText="Password" value=model.password errors=errors.password}}
		{{validated-input-group type="password" placeholder="Confirm password" name="passwordConfirmation" labelText="Confirm Password" value=model.passwordConfirmation errors=errors.passwordConfirmation}}
		<button class="btn btn-primary" type='submit'>Register</button>
	</form>
{{/unless}}

