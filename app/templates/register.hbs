{{#if registerSuccess}}
	<br/>
	<div class="alert alert-success alert-dismissable" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>  </button>
		  <i class="fa fa-check"></i>
		<strong>Success!</strong> You can now <strong><u>{{#link-to 'login'}}Login{{/link-to}}</u></strong>
		<i class="fa fa-ok"></i>
	</div>	
{{else unless session.currentUser}}

		<form {{action 'registerUser' model on="submit" }}>
			<h2>Register</h2>
			{{#if model.errors}}
				{{display-errors errors=model.errors}}
			{{/if}}
			{{validated-input-group type="email" placeholder="Enter email" name="email" hasValidationErrors=hasValidationErrors labelText="Email Address" value=model.email errors=errors.validationModel.email}}
			{{validated-input-group type="password" placeholder="Enter password" name="password" hasValidationErrors=hasValidationErrors labelText="Password" value=model.password errors=errors.validationModel.password}}
			{{validated-input-group type="password" placeholder="Confirm password" hasValidationErrors=hasValidationErrors name="passwordConfirmation" labelText="Confirm Password" value=model.passwordConfirmation errors=errors.validationModel.passwordConfirmation}}
			<button class="btn btn-primary" type='submit'>Register</button>
		</form>
{{/if}}
