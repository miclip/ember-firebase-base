{{#if resetSuccess}}
	<br/>
	<div class="alert alert-success alert-dismissable" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span>  </button>
		  <i class="fa fa-check"></i>
		<strong>Success!</strong> An email is on its way to you. Follow the instructions to reset your password.
		<i class="fa fa-ok"></i>
	</div>	
{{else unless session.currentUser}}
   <form {{action 'resetPassword' model on="submit"}}> 
   	 <h2>Reset Password</h2>
		{{#if model.errors}}
		  {{display-errors errors=model.errors}}
		{{/if}}
		{{validated-input-group type="email" placeholder="Enter email" name="email" hasValidationErrors=hasValidationErrors labelText="Email Address" value=model.email errors=errors.validationModel.email}}
	   <button class="btn btn-primary {{if isProcessing 'disabled'}}" type='submit'>Reset</button>
	   {{#if isProcessing}}
	   		<i class="fa fa-spinner fa-pulse" aria-hidden="true"></i>
	   {{/if}}
	</form>
{{/if}}